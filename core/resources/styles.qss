/* =============================================================================
   CFAB Browser
   ============================================================================= */

/* ===================== GŁÓWNE TŁA I TEKST ===================== */
QMainWindow, QDialog, QWidget {
    background-color: #1C1E2A;
    color: #a9b7c6;
    font-family: 'Segoe UI', 'Arial', sans-serif;
    font-size: 10px;
}

QLabel {
    color: #a9b7c6;
    background-color: transparent;
    font-size: 10px;
}

/* ===================== PRZYCISKI ===================== */
QPushButton {
    background-color: #313335;
    color: #a9b7c6;
    border: 1px solid #3a3a3a;
    border-radius: 2px;
    padding: 4px 12px;
    min-height: 24px;
    max-height: 24px;
    font-size: 10px;
    font-weight: normal;
}
QPushButton:hover {
    background-color: #3a3a3a;
    border-color: #287bde;
}
QPushButton:pressed {
    background-color: #214383;
    border-color: #287bde;
}
QPushButton:disabled {
    background-color: #2b2b2b;
    color: #888888;
    border-color: #3a3a3a;
}
QPushButton[action="primary"] {
    background-color: #287bde;
    color: #ffffff;
    border: none;
    font-weight: bold;
}
QPushButton[action="primary"]:hover {
    background-color: #214383;
}
QPushButton[action="primary"]:pressed {
    background-color: #214383;
}
QPushButton[action="success"] {
    background-color: #a5c261;
    color: #2b2b2b;
    border: none;
    font-weight: bold;
}
QPushButton[action="warning"] {
    background-color: #cc7832;
    color: #2b2b2b;
    border: none;
    font-weight: bold;
}

/* ===================== POLA EDYCJI, LISTY, TABELKI ===================== */
QLineEdit, QTextEdit, QTableWidget, QListWidget, QComboBox, QSpinBox {
    background-color: #313335;
    color: #a9b7c6;
    border: 1px solid #3a3a3a;
    border-radius: 2px;
    padding: 2px;
    selection-background-color: #214383;
    font-size: 10px;
}
QLineEdit:focus, QTextEdit:focus, QComboBox:focus, QSpinBox:focus {
    border-color: #287bde;
}
QLineEdit:disabled, QTextEdit:disabled, QComboBox:disabled, QSpinBox:disabled {
    background-color: #2b2b2b;
    color: #888888;
}
QListWidget::item {
    padding: 2px;
    border: none;
}
QListWidget::item:selected {
    background-color: #214383;
    color: #ffffff;
}
QListWidget::item:hover {
    background-color: #3a3a3a;
}
QTableWidget::item:selected {
    background-color: #214383;
    color: #ffffff;
}
QHeaderView::section {
    background-color: #313335;
    color: #a9b7c6;
    padding: 2px;
    border: 1px solid #3a3a3a;
    font-weight: bold;
}

/* ===================== ZAKŁADKI I GRUPY ===================== */
QTabWidget {
    border: none;
}
QTabWidget::pane {
    border: 1px solid #3a3a3a;
    background-color: #313335;
    color: #a9b7c6;
    top: -1px;
    margin: 0px;
    padding: 2px;
}
QTabBar::tab {
    background-color: #2b2b2b;
    color: #a9b7c6;
    padding: 5px 10px;
    margin-right: 2px;
    /* border-top-left-radius: 2px; */
    /* border-top-right-radius: 2px; */
    border: 1px solid #3a3a3a;
    min-width: 80px;
    max-height: 25px;
    font-size: 10px;
}
QTabBar::tab:selected {
    background-color: #313335;
    border-bottom-color: #313335;
    font-weight: bold;
}
QTabBar::tab:hover {
    background-color: #3a3a3a;
}
QTabBar::tab:disabled {
    color: #888888;
    background-color: #3a3a3a;
}
QTabWidget::tab-bar {
    alignment: left;
    background: #2b2b2b;
}
QTabWidget::tab-bar::tab:selected {
    margin-bottom: -1px;
    border-bottom: 2px solid #287bde;
}
QGroupBox {
    background-color: #313335;
    color: #a9b7c6;
    border: 1px solid #3a3a3a;
    border-radius: 2px;
    margin-top: 14px;
    padding-top: 14px;
    font-weight: normal;
    font-size: 10px;
}
QGroupBox::title {
    subcontrol-origin: margin;
    left: 8px;
    padding: 0 5px;
    color: #ffffff;
    font-weight: bold;
}

/* ===================== DRZEWO FOLDERÓW ===================== */
QTreeView, #cfabFolderTree, .cfab-folder-tree QTreeView {
    background-color: #1C1E2A;
    color: #a9b7c6;
    border: none;
    outline: none;
    font-size: 11px;
}
QTreeView::item {
    padding: 2px;
    border: none;
}
QTreeView::item:hover {
    background-color: #1C1E2A;
}
QTreeView::item:selected, QTreeView::item[dropTarget="true"] {
    background-color: #214383;
    color: #ffffff;
}
QTreeView::item[dropTarget="true"] {
    border: 2px solid #287bde;
}
QTreeView::branch {
    background-color: #1C1E2A;
}

/* ===================== KAFELKI ASSETÓW ===================== */
TileBase, .AssetTileView {
    background-color: rgba(40, 120, 222, 0.10);
    border: 1px solid #202230;
    border-radius: 6px;
    margin: 0px;
}
TileBase:hover, .AssetTileView:hover {
    background-color: rgba(40, 120, 222, 0.10);
    border-color: #287bde;
}

/* ===================== KAFELKI ASSETÓW - MINIATURKA ===================== */
/* Styluje kontener miniaturki w kafelku */
#AssetTileThumbnail {
    border: none;
    background: transparent;
    margin: 0px;
    padding: 0px;
}

/* ===================== KAFELKI ASSETÓW - IKONA TEKSTURY ===================== */
/* Styluje ikonę tekstury (16x16px) w kafelku */
#AssetTileTextureIcon {
    background: transparent;
    margin: 0px;
    padding: 0px;
    border: none;
}

/* ===================== KAFELKI ASSETÓW - KONTENER NAZWY PLIKU ===================== */
/* Styluje kontener z nazwą pliku, ikoną tekstury i rozmiarem */
#AssetTileFilenameContainer {
    background: transparent;
    margin: 0px;
    padding: 0px;
    border: none;
}

/* ===================== KAFELKI ASSETÓW - DOLNY PAS ===================== */
/* Styluje dolny pas z numerem, gwiazdkami i checkboxem */
#AssetTileBottomRow {
    background: transparent;
    margin: 0px;
    padding: 0px;
    border: none;
}

/* ===================== KAFELKI ASSETÓW - GWIAZDKI ===================== */
/* Styluje gwiazdki oceny (1-5) w kafelku */
#AssetTileStar_1, #AssetTileStar_2, #AssetTileStar_3, #AssetTileStar_4, #AssetTileStar_5 {
    background: transparent;
    color: #cc7832;
    font-size: 14px;
    margin: 0px;
    padding: 0px;
    border: none;
}
#AssetTileStar_1:hover, #AssetTileStar_2:hover, #AssetTileStar_3:hover, #AssetTileStar_4:hover, #AssetTileStar_5:hover {
    color: #ffcc66;
}

QLabel[class="thumbnail-container"] {
    border: none;
    background: transparent;
    margin: 0px;
    padding: 0px;
}

/* ===================== KAFELKI ASSETÓW - LINIA Z NAZWĄ ===================== */
/* Styluje linię z nazwą pliku/modelu w kafelku assetu */
#AssetTileNameLabel {
    background: transparent;
    color: #a9b7c6;
    font-weight: bold;
    font-size: 12px;
    padding: 2px 8px;
    border-bottom: 1px solid #202230;
}
#AssetTileNameLabel:hover {
    font-weight: bold;
    color: #ffffff;
}

/* ===================== KAFELKI ASSETÓW - LINIA Z GWIAZDKAMI ===================== */
/* Styluje linię z gwiazdkami (oceną) w kafelku assetu */
#AssetTileStarsRow {
    background: transparent;
    padding: 2px 8px;
    min-height: 24px;
    border-top: 1px solid #202230;
}

/* ===================== KAFELKI ASSETÓW - LINIA Z ROZMIARAMI ===================== */
/* Styluje linię z rozmiarem pliku (np. 15.4 MB) */
#AssetTileSizeLabel {
    background: transparent;
    color: #888888;
    font-size: 11px;
    padding: 0 8px;
    text-align: right;
}

/* ===================== KAFELKI ASSETÓW - LINIA Z NUMEREM ===================== */
/* Styluje numer kafelka (np. 2/2) */
#AssetTileNumberLabel {
    background: transparent;
    color: #888888;
    font-size: 11px;
    padding: 0 8px;
}

/* ===================== KAFELKI ASSETÓW - LINIA Z CHECKBOXEM ===================== */
/* Styluje checkbox wyboru kafelka */
#AssetTileCheckBox {
    margin: 0px;
    padding: 0px;
    border: none;
}

/* ===================== KAFELKI ASSETÓW - LINIA Z IKONĄ ===================== */
/* Styluje ikonę typu pliku (np. ikona szachownicy) */
#AssetTileIconLabel {
    background: transparent;
    padding: 0 4px;
    min-width: 18px;
    min-height: 18px;
}

/* ===================== KAFELKI ASSETÓW - LINIA Z LICZBĄ OBRAZÓW ===================== */
/* Styluje liczbę obrazów (np. 2/2) */
#AssetTileImageCountLabel {
    background: transparent;
    color: #888888;
    font-size: 11px;
    padding: 0 8px;
}

/* ===================== KAFELKI ASSETÓW - LINIA Z DATĄ ===================== */
/* Styluje datę dodania/edycji pliku */
#AssetTileDateLabel {
    background: transparent;
    color: #888888;
    font-size: 10px;
    padding: 0 8px;
}

/* ===================== KAFELKI ASSETÓW - LINIA Z AUTOREM ===================== */
/* Styluje autora/modelarza assetu */
#AssetTileAuthorLabel {
    background: transparent;
    color: #a5c261;
    font-size: 10px;
    padding: 0 8px;
}

/* ===================== KAFELKI ASSETÓW - LINIA Z FORMATEM ===================== */
/* Styluje informację o formacie pliku (np. .zip, .jpg) */
#AssetTileFormatLabel {
    background: transparent;
    color: #9876aa;
    font-size: 10px;
    padding: 0 8px;
}

/* ===================== KAFELKI ASSETÓW - LINIA Z TAGAMI ===================== */
/* Styluje tagi assetu (np. kategorie, słowa kluczowe) */
#AssetTileTagsLabel {
    background: transparent;
    color: #287bde;
    font-size: 10px;
    padding: 0 8px;
}

/* ===================== KONSOLA I POSTĘP ===================== */
#ConsoleHeaderLabel, #ProgressHeaderLabel {
    font-weight: bold;
    color: #a9b7c6;
    font-size: 11px;
    padding-bottom: 4px;
}
#ConsoleOutput {
    background-color: #313335;
    color: #a9b7c6;
    font-family: 'Consolas', 'Courier New', monospace;
    font-size: 10px;
}
#CurrentTaskInfoLabel {
    color: #a9b7c6;
}
#TaskProgressDetailsLabel {
    color: #a9b7c6;
    font-style: italic;
}
QProgressBar {
    border: 1px solid #3a3a3a;
    background-color: #313335;
    text-align: center;
    color: #a9b7c6;
    border-radius: 6px;
    /* margin: 4px;     */
    min-width: 200px;
    max-width: 200px;
}
QProgressBar::chunk {
    background-color: #287bde;
    border-radius: 1px;
}

/* ===================== PASKI PRZEWIJANIA ===================== */
QScrollBar:vertical {
    border: none;
    background: #2b2b2b;
    width: 12px;
    margin: 12px 0 12px 0;
    border-radius: 6px;
}
QScrollBar::handle:vertical {
    background: #3a3a3a;
    min-height: 20px;
    border-radius: 6px;
}
QScrollBar::handle:vertical:hover {
    background: #287bde;
}
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    border: none;
    background: none;
    height: 12px;
}
QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;
}
QScrollBar:horizontal {
    border: none;
    background: #2b2b2b;
    height: 12px;
    margin: 0 12px 0 12px;
    border-radius: 6px;
}
QScrollBar::handle:horizontal {
    background-color: #287bde;
    border: 1px solid #287bde;
    width: 12px;
    height: 12px;
    margin: -5px 0;
    border-radius: 6px;
}
QScrollBar::handle:horizontal:hover {
    background-color: #214383;
}
QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    border: none;
    background: none;
    width: 12px;
}
QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
    background: none;
}

/* ===================== MENU, STATUSBAR, SEPARATORY ===================== */
QMenu {
    background-color: #1C1E2A;
    color: #a9b7c6;
    border: 1px solid #3a3a3a;
    padding: 2px;
}
QMenu::item:selected {
    background-color: #214383;
}
QMenu::separator {
    height: 1px;
    background-color: #3a3a3a;
    margin: 2px 0px;
}
QMenuBar {
    background-color: #1C1E2A;
    color: #a9b7c6;
    border-bottom: 1px solid #3a3a3a;
}
QMenuBar::item {
    background: transparent;
    padding: 4px 8px;
}
QMenuBar::item:selected {
    background-color: #3a3a3a;
}
QMenuBar::item:pressed {
    background-color: #214383;
}
QStatusBar {
    background-color: #1C1E2A;
    color: #a9b7c6;
    border-top: 1px solid #3a3a3a;
}
QStatusBar::item {
    border: none;
}
QFrame[frameShape="HLine"] {
    border: none;
    border-top: 1px solid #3a3a3a;
}
QSlider::groove:horizontal {
    border: 1px solid #3a3a3a;
    height: 4px;
    background: #3a3a3a;
    margin: 2px 0;
    border-radius: 2px;
}
QSlider::handle:horizontal {
    background-color: #287bde;
    border: 1px solid #287bde;
    width: 12px;
    height: 12px;
    margin: -5px 0;
    border-radius: 6px;
}
QSlider::handle:horizontal:hover {
    background-color: #214383;
}

/* ===================== CHECKBOXY, RADIO ===================== */
QCheckBox {
    color: #a9b7c6;
    font-size: 10px;
    spacing: 4px;
}
QCheckBox::indicator {
    width: 16px;
    height: 16px;
    border: 1px solid #3a3a3a;
    border-radius: 2px;
    background-color: #313335;
}
QCheckBox::indicator:checked {
    background-color: #287bde;
    border-color: #287bde;
}
QCheckBox::indicator:hover {
    border-color: #287bde;
}
QRadioButton {
    color: #a9b7c6;
    font-size: 10px;
    spacing: 4px;
}
QRadioButton::indicator {
    width: 16px;
    height: 16px;
    border: 1px solid #3a3a3a;
    border-radius: 8px;
    background-color: #313335;
}
QRadioButton::indicator:checked {
    background-color: #287bde;
    border-color: #287bde;
}
QRadioButton::indicator:hover {
    border-color: #287bde;
}
QCheckBox.star {
    spacing: 0px;
    color: #9876aa;
    font-size: 10.8px;
    min-width: 12px;
    min-height: 12px;
}
QCheckBox.star::indicator {
    width: 0px;
    height: 0px;
    border: none;
    background: transparent;
}
QCheckBox.star:checked {
    color: #ffef28;
    font-weight: bold;
}
QCheckBox.star:hover {
    color: #cc7832;
}

/* ===================== KLASY CSS I ROZMIARY ===================== */
QLabel[class="header"] { font-weight: bold; font-size: 11px; color: #ffffff; padding-bottom: 4px; }
QLabel[class="info"] { color: #a9b7c6; font-style: italic; font-size: 10px; }
QLabel[class="warning"] { color: #cc7832; font-weight: bold; font-size: 10px; }
QLabel[class="mode-label"] { font-weight: bold; margin-bottom: 5px; }
QLabel[class="text-label"] { font-weight: bold; margin-top: 10px; margin-bottom: 5px; }
QLabel[class="dialog-header"] { font-weight: bold; font-size: 14px; }
QLabel[class="example-label"] { color: #888888; font-style: italic; font-size: 10px; }
QLabel[class="folder-label"] { font-style: italic; color: #888888; }
QLabel[class="folder-label-normal"] { font-style: normal; color: #a9b7c6; }
QPushButton[class="start-button"] { font-size: 14px; padding: 5px 10px; font-weight: bold; background-color: #287bde; color: #ffffff; border: none; border-radius: 4px; }
QPushButton[class="start-button"]:hover { background-color: #214383; }
QPushButton[class="start-button"]:pressed { background-color: #214383; }
QTextEdit[class="tool-text"] { font-size: 12px; padding: 5px; }

/* ===================== SUWAK DO SKALOWANIA (QSlider) ===================== */
/* Ustala szerokość suwaka do skalowania na 200px */
QSlider[objectName="ScaleSlider"], #ScaleSlider {
    min-width: 200px;
    max-width: 200px;
}

/* =============================================================================
   KONIEC ARKUSZA STYLÓW
   ============================================================================= */